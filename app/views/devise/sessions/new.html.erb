<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-5 col-xl-4 my-5">

        <!-- Heading -->
        <h1 class="display-4 text-center mb-3">
          Sign in
        </h1>

        <form>

          <!-- Email address -->
          <div class="form-group">

            <!-- Label -->
            <label class="form-label">
              Email Address
            </label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",  placeholder:"name@address.com"  %>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col">
                <label class="form-label">
                  Password
                </label>
              </div>
            </div> 
            <div class="input-group input-group-merge">
              <%= f.password_field :password, autocomplete: "current-password", type:"password", placeholder:"Enter your password", class:"form-control" %>
              <span class="input-group-text">
                <i class="fe fe-eye"></i>
              </span>

            </div>
          </div>

          <!-- Submit -->
          <%= f.submit "Log in", class:"btn btn-lg w-100 btn-primary mb-3" %>

        </form>

      </div>
    </div> 
  </div> 
<% end %>