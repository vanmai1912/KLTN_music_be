<div class="container-fluid"> <h1 class="mt-4">Artists</h1> </div>
<div class="container-fluid d-flex justify-content-end mb-3">
  <%= link_to 'New artist', new_artist_path, class: "btn btn-primary" %>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <ul class="list-group list-group-lg list-group-flush list my-n4">
            <% @artists.each do |artist| %>
              <li class="list-group-item">
                <div class="row align-items-center d-flex">
                  <div class="col col-2">
                    <% if artist.image.present? %>
                      <%= link_to edit_artist_path(artist) do %>
                        <%= image_tag artist.image, alt: "image", size: "160x120" %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="col">
                    <h4 class="mb-1 name">
                      <%= link_to artist.name, artist_path(artist) %>
                    </h4>
                    <p class="card-text small text-body-secondary">
                      <%= artist.description %>
                    </p>

                  </div>
                  <div class="col-auto">
                    <%= link_to 'Show', artist_path(artist), class: "btn btn-sm btn-primary d-none d-md-inline-block" %>
                    <%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-primary d-none d-md-inline-block" %>
                  </div>
                </div> 
              </li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <%= paginate @artists, theme: 'twitter-bootstrap-3' %>
  </div>
</div>
